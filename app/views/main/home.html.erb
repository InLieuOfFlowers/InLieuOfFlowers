<div id="wrapper">
<div class="row">
<div class="span8 offset2">
<%= image_tag("flowers.png") %>
<p class="lead">
	Helping Families Commemorate Loved Ones
</p>
</div>
</div>

<div class="row-fluid">
	<div class="span3 mystyle" >
		<h3>Step 1</h3>
		<div id="setup"></div>
		<p class="steps">Setup an account.</p>
	</div>
	<div class="span3 mystyle">
		<h3>Step 2</h3>
		<div id="user"></div>
		<p class="steps">Create account for your loved one.</p>
	</div>
	<div class="span3 mystyle">
		<h3>Step 3</h3>
		<div id="mail"></div>
		<p class="steps">Tell us who you would like donation to go.</p>
	</div>
	<div class="span3 mystyle">
		<h3>Step 4</h3>
		<div id="check"></div>
		<p class="steps">We will take care of the rest.</p>
			<p class="lead">
				<% if user_signed_in? %>
					<%= link_to "Get Started Here", new_honored_path %>
				<% else %>
					<%= link_to "Get Started Here", new_user_registration_path, 
						class: 'btn btn-block btn-success' %>
				<% end %>
			</p>
		</div>
	</div>
	<div class="row-fluid " style="margin-top:50px">
		<div class="span8 offset2">
			<% if user_signed_in? %>
				<%= link_to "Want to donate?", new_donation_path %>
			<% else %>			
				<%= link_to "Want to donate? Start here.", new_user_registration_path,
					class: 'btn btn-block btn-success btn-large' %>
			<% end %>
		</div>
	</div>

<div class="row feedHead">
	<div class="span4">
		<h3>About Us</h3>
