<div class="row-fluid">
	<div class="mystyle span8 offset2">
		<h1>Edit Honored Account</h1>
		<% @honored.errors.full_messages.each do |msg| %>
      		<p class='alert alert-error'><%= msg %></p>
    	<% end %>
		<%= form_for(@honored, :html => { :class => 'form-horizontal' }) do |f| %>
			<div class='control-group'>
				<%= f.label :first_name, class: 'control-label' %>
				<div class='controls'>
					<%= f.text_field :first_name %>
				</div>
			</div>
			<div class='control-group'>
				<%= f.label :last_name, class: 'control-label' %>
				<div class='controls'>
					<%= f.text_field :last_name %>
				</div>
			</div>

		<h1>Important !</h1>
		<p>
			The following a optional information that will help others find you loved one.
			Please don't enter information if you do not feel confortable letting others view it.
		</p>
		<div class='control-group'>
			<%= f.label :date_of_birth, class: 'control-label' %>
			<div class='controls'>
				<%= f.text_field :date_of_birth, class: 'datepicker' %>
			</div>
		</div>
		<div class='control-group'>
			<%= f.label :date_of_death, class: 'control-label' %>
			<div class='controls'>
				<%= f.text_field :date_of_death, class: 'datepicker' %>
			</div>
		</div>
		<div class='control-group'>
			<%= f.label :city, class: 'control-label' %>
			<div class='controls'>
				<%= f.text_field :city %>
			</div>
		</div>
		<div class='control-group'>
			<%= f.label :state, class: 'control-label' %>
			<div class='controls'>
				<%= f.text_field :state, size: 2, maxlength: 2 %>
			</div>
		</div>
		<div class='control-group'>
			<%= f.label :description, class: 'control-label' %>
			<small>Enter a brief (256 maximun characters) description of you loved one</small>
			<div class='controls'>
				<%= f.text_area :description %>
			</div>			
		</div>
		<div class='control-group'>
			<div class='controls'>
				<%= f.submit "Submit", class: "btn btn-large btn-primary" %>
			</div>
		</div>
	<% end %>
	</div>
</div>