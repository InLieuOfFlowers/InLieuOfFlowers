<div>
	<%= form_for(@honored, :html => { :class => 'form-horizontal' }) do |f| %>
	<div class='control-group'>
		<%= f.label :first_name, class: 'control-label' %>
		<div class='controls'>
			<%= f.text_field :first_name %>
		</div>
	</div>
	<div class='control-group'>
		<%= f.label :last_name, class: 'control-label' %>
		<div class='controls'>
			<%= f.text_field :last_name %>
		</div>
	</div>
	<div class='control-group'>
		<%= f.label :date_of_birth, class: 'control-label' %>
		<div class='controls'>
			<%= f.text_field :date_of_birth, class: 'datepicker' %>
		</div>
	</div>
	<div class='control-group'>
		<%= f.label :date_of_death, class: 'control-label' %>
		<div class='controls'>
			<%= f.text_field :date_of_death, class: 'datepicker' %>
		</div>
	</div>
	<div class='control-group'>
		<%= f.label :city, class: 'control-label' %>
		<div class='controls'>
			<%= f.text_field :city %>
		</div>
	</div>
	<div class='control-group'>
		<%= f.label :state, class: 'control-label' %>
		<div class='controls'>
			<%= f.text_field :state %>
		</div>
	</div>
	<div class='control-group'>
		<%= f.label :description, class: 'control-label' %>
		<div class='controls'>
			<%= f.text_area :description %>
		</div>
	</div>
	<div class='control-group'>
		<div class='controls'>
			<%= f.submit "Register Honored", class: "btn btn-large btn-primary" %>
		</div>
	</div>
	<% end %>
</div>