<script type="text/javascript">
	$('.datepicker').datepicker();
</script>
<div>
	<%= form_for(@honored) do |f| %>
	<%= f.label :first_name %>
	<%= f.text_field :first_name %>
	<%= f.label :last_name %>
	<%= f.text_field :last_name %>
	<p>The following information is optional. It will be displayed to the donor
			to help them varify they have found the right honored to donate to.
	</p>
	<%= f.label :date_of_birth %>
	<%= f.text_field :date_of_birth, class: 'datepicker' %>
	<%= f.label :date_of_death %>
	<%= f.text_field :date_of_death, class: 'datepicker' %>
	<%= f.label :city %>
	<%= f.text_field :city %>
	<%= f.label :state %>
	<%= f.text_field :state %>
	<%= f.label :description %>
	<%= f.text_area :description %>
	<%= f.submit "Create Honored Account", class: "btn btn-large btn-primary" %>
	<% end %>
</div>