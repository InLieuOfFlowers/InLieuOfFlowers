<div>
	<%= form_for(@organization, :html => { :class => 'form-horizontal' }) do |f| %>
		<div class='control-group'>
			<%= f.label :name, class: 'control-label' %>
			<div class='controls'>
				<%= f.text_field :name %>
			</div>
		</div>
		<div class='control-group'>
			<%= f.label :street, class: 'control-label' %>
			<div class='controls'>
				<%= f.text_field :street %>
			</div>
		</div>
	<% end %>
</div>