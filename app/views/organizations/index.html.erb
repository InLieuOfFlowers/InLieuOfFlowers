<div class="row-fluid">
  <div class="mystyle span3 text-center">
    <div class="row-fluid">
      <%= form_tag organizations_path, method: :get, class: "form-search" do %>
        <p>
          <%= text_field_tag :search, params[:search], class: "input-medium search-query" %>
          <%= submit_tag "Search", :name => nil, class: "btn btn-info" %>
        </p>
      <% end %>
    </div>
    <div class="row-fluid">
      <ul class="unstyled">
        <li><%= link_to "Add Organization", new_organization_path, class: "btn btn-success" %></li>
      </ul>
    </div>
  </div>
	<div class="mystyle span7"> 
    <% if defined?(@organization) && !@organization.empty? %>
      <h3>Organization Names</h3>
      <p>
        This is a list of the organization listed within the system.
        Click one to view the details.
      </p>
		  <ul class="unstyled">
  			 <% for organization in @organization %>
 				   <li><%= link_to organization.name, organization %></li>
  			 <% end %>
		  </ul>
		  <%= will_paginate @organization, :renderer => BootstrapPagination::Rails %>
    <% else %>
      <p>No results found. </p>
    <% end %>
	</div>
</div>
